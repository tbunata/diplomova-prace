{
    "compilerOptions": {                        
      "target": "esnext",                               
      "module": "commonjs",
      "rootDir": "./src",                           
      "outDir": "./dist",                              
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "typeRoots": ["./src/types", "./node_modules/@types"]                       
    },
    "exclude":[
      "./node_modules"
    ]
  }