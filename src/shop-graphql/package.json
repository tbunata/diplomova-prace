{
  "name": "shop-graphql",
  "version": "1.0.0",
  "description": "GraphQL project for diploma thesis",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix . --ext .ts",
    "start:dev": "nodemon -L src/index.ts",
    "start:debug": "nodemon --exec 'node --inspect=0.0.0.0:9229 --require ts-node/register src/index.ts'",
    "start": "ts-node src/index.ts --inspect",
    "test-db:up": "docker-compose -f docker-compose.test.yml -p shop-api-tests up -d",
    "test-db:down": "docker-compose -f docker-compose.test.yml -p shop-api-tests down",
    "test": "npm run test-db:up && dotenv -e .env.test npx prisma migrate deploy && dotenv -e .env.test jest -i; npm run  test-db:down"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "Tomas Bunata",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.9.1",
    "apollo-server-core": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "class-validator": "^0.13.2",
    "eslint": "^8.8.0",
    "express": "^4.17.2",
    "graphql": "^15.8.0",
    "prisma": "^3.9.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
