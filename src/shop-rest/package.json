{
  "name": "shop-rest",
  "version": "1.0.0",
  "description": "REST project for diploma thesis",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon -L src/index.ts",
    "start": "ts-node src/index.ts",
    "test-db:up": "docker-compose -f docker-compose.test.yml -p shop-api-tests up -d",
    "test-db:down": "docker-compose -f docker-compose.test.yml -p shop-api-tests down",
    "test": "npm run test-db:up && dotenv -e .env.test npx prisma migrate deploy && dotenv -e .env.test jest -i; npm run  test-db:down"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "Tomas Bunata",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.11",
    "dotenv-cli": "^4.1.1",
    "jest": "^27.4.3",
    "nodemon": "^2.0.15",
    "prisma": "^3.5.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  }
}
